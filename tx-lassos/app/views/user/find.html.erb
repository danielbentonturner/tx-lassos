<div class="panel panel-default">
	<div class="panel-heading">
		<span class="panel-title">Search
		</span>
	</div>
	<div class="panel-body-prof-main">
		<div class="wrapper">
			<h2>Find Another Alumna</h2>
			<div class="search-form">

				<%= form_for @search, url: find_path, :html => {:class => 'form'} do |f| %>

				  <%=f.label :email %>
				  <%=f.text_field :email %>

				  <%=f.label :name %>
				  <%=f.text_field :name %>

				  <%=f.label :location %>
				  <%=f.text_field :city_state %>

				  <%=f.label :major %>
				  <%=f.text_field :major %>

				  <%=f.label :employer %>
				  <%=f.text_field :employer %>

				  <%=f.label :job_title %>
				  <%=f.text_field :job_title %>

				  <%=f.label :pledge_semester %>
				  <%= f.select :pledge_class, options_for_select(@pledge_class.each {|pc| pc}), {:prompt => "Pledge Semester"}, { :class => 'form-selects' } %>

				  <%=f.label :job_title %>
				  <%= f.select :pledge_class_name, options_for_select(@pledge_class_name.each {|pcn| pcn}), {:prompt => "Pledge Class Name"}, { :class => 'form-selects' } %>

				  <%=f.label :job_title %>
				  <%= f.select :grad_year, options_for_select(@grad_year.each {|gy| gy}), {:prompt => "Graduation Year"}, { :class => 'form-selects' } %>
			
				<%= f.submit "Search", :class => "btn btn-primary search-butt" %> 	
		<% end %>
		</div>
		</div>
	</div>
</div>
	<div class="panel panel-default">
	<div class="results">
		<% if @users %>
			<table class="table table-striped table-hover search-results">
				<h3>&nbsp; Matches</h3>
				<thead>
					<tr>
						<td>Name</td>
						<td>Email</td>
						<td>Pledge Class</td>
						<td>Semester</td>
						<td>Graduation Year</td>
						<td>Major</td>
						<td>Location</td>
						<td>Employer</td>
						<td>Title</td>
					</tr>
				</thead>
				<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= link_to user.name, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.email, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.pledge_class_name, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.pledge_class, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.grad_year, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.major, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.city_state, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.employer, "/profile/" + user.id.to_s %></td>
						<td><%= link_to user.job_title, "/profile/" + user.id.to_s %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		<% end %>
		</div>
	</div>
	


